<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <filter>
        <filter-name>DispatcherFilter</filter-name>
        <filter-class>namdp.filters.DispatcherFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>DispatcherFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>namdp.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>namdp.servlets.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchShoeServlet</servlet-name>
        <servlet-class>namdp.servlets.SearchShoeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchOutOfStockServlet</servlet-name>
        <servlet-class>namdp.servlets.SearchOutOfStockServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateShoeServlet</servlet-name>
        <servlet-class>namdp.servlets.ImportShoeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DisableServlet</servlet-name>
        <servlet-class>namdp.servlets.DisableServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchShoeServlet</servlet-name>
        <url-pattern>/SearchShoeServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchOutOfStockServlet</servlet-name>
        <url-pattern>/SearchOutOfStockServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateShoeServlet</servlet-name>
        <url-pattern>/UpdateShoeServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DisableServlet</servlet-name>
        <url-pattern>/DisableServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
        <tracking-mode>COOKIE</tracking-mode>
    </session-config>
    <resource-ref>
        <res-ref-name>NDP</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
</web-app>
